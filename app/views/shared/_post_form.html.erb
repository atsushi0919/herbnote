<%= form_with(model: @post, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.collection_select :herb_id, Herb.all, :id, :name, include_blank: "選択してください" %>
  <ul>
    <% @topics.each do |topic| %>
      <li>
        <% if File.exist? "#{Rails.root}/app/assets/images/#{topic.feature}.png" %>
          <%= image_tag "#{topic.feature}.png" %>
        <% end %>
      </li>
    <% end %>
  </ul>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new post..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: "image/png,image/jpeg,image/gif" %>
  </span>
<% end %>
